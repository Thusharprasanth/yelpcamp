<% layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/campgrounds" method="post" enctype="multipart/form-data" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title : </label>
        <input
          class="form-control"
          name="campground[title]"
          type="text"
          id="title"
          required
        />
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please choose a Title.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location : </label>
        <input
          class="form-control"
          name="campground[location]"
          type="text"
          id="location"
          required
        />
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL : </label>
        <input
          class="form-control"
          name="campground[image]"
          type="text"
          id="image"
          required
        />
      </div> -->
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price">$</span>
          <input
            name="campground[price]"
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-describedby="price"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description : </label>
        <textarea
          class="form-control"
          name="campground[description]"
          type="text"
          id="description"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <input class="form-control" name="image" type="file" placeholder="Upload Image(s)...." id="formFile" multiple>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>


